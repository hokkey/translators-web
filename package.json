{
  "name": "translators-web",
  "productName": "Translators Web",
  "version": "1.2.0",
  "private": true,
  "main": "./build/main.js",
  "description": "A simple Electron app which combines Grammarly and Google Translate into one window",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint --fix -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron .",
    "clean": "rm -rf ./packages/*",
    "package": "npm run clean && npm run build && electron-packager . --out=packages --ignore=^/src --ignore=^/.idea",
    "test": "npm run lint && jest --verbose"
  },
  "keywords": [
    "Electron",
    "typescript"
  ],
  "build": {
    "platform": "darwin",
    "arch": "x64",
    "electronVersion": "11.2.0",
    "asar": true
  },
  "author": "y_hokkey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hokkey/translators-web.git"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "electron": "^11.2.0",
    "electron-packager": "^15.2.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {}
}
