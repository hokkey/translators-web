{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["**/*.spec.ts"]
}
